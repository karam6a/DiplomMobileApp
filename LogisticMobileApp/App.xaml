<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticMobileApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Светлая тема -->
            <Color x:Key="BackgroundLight">#FFFFFF</Color>
            <Color x:Key="TextLight">#000000</Color>
            <Color x:Key="ButtonBackgroundLight">#007BFF</Color>
            <Color x:Key="ButtonTextLight">#FFFFFF</Color>
            <Color x:Key="EntryBackgroundLight">#F0F0F0</Color>
            <Color x:Key="LinkTextLight">#007BFF</Color>

            <!-- Тёмная тема -->
            <Color x:Key="BackgroundDark">#1C2526</Color>
            <Color x:Key="TextDark">#FFFFFF</Color>
            <Color x:Key="ButtonBackgroundDark">#005B99</Color>
            <Color x:Key="ButtonTextDark">#FFFFFF</Color>
            <Color x:Key="EntryBackgroundDark">#333333</Color>
            <Color x:Key="LinkTextDark">#4DA8FF</Color>

            <!-- Динамические ресурсы -->
            <Style TargetType="ContentPage" x:Key="PageStyle">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource BackgroundLight},
                                                 Dark={StaticResource BackgroundDark}}" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextLight},
                                                 Dark={StaticResource TextDark}}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource ButtonBackgroundLight},
                                                 Dark={StaticResource ButtonBackgroundDark}}" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource ButtonTextLight},
                                                 Dark={StaticResource ButtonTextDark}}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="10" />
            </Style>

            <Style TargetType="Button" x:Key="LinkButtonStyle">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource LinkTextLight},
                                                 Dark={StaticResource LinkTextDark}}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style TargetType="Label" x:Key="LinkLabelStyle">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource LinkTextLight},
                                                 Dark={StaticResource LinkTextDark}}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextDecorations" Value="Underline" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource EntryBackgroundLight},
                                                 Dark={StaticResource EntryBackgroundDark}}" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextLight},
                                                 Dark={StaticResource TextDark}}" />
                <Setter Property="PlaceholderColor"
                        Value="{AppThemeBinding Light={StaticResource TextLight},
                                                 Dark={StaticResource TextDark}}" />
            </Style>
            <!-- Новый стиль для Picker -->
            <Style TargetType="Picker">
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextLight},
                                                 Dark={StaticResource TextDark}}" />
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource EntryBackgroundLight},
                                                 Dark={StaticResource EntryBackgroundDark}}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
