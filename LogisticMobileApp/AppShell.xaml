<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:LogisticMobileApp.Pages"
       x:Class="LogisticMobileApp.AppShell">

    <Shell.Resources>
        <x:String x:Key="Menu_Login">Вход</x:String>
        <x:String x:Key="Menu_Register">Регистрация</x:String>
        <x:String x:Key="Menu_Dashboard">Рабочая панель</x:String>
        <x:String x:Key="Menu_Settings">Настройки</x:String>
        <x:String x:Key="Menu_Confirm">Подтверждение</x:String>
    </Shell.Resources>

    <ShellContent
        Title="{DynamicResource Menu_Login}"
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="{DynamicResource Menu_Register}"
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
        Title="{DynamicResource Menu_Dashboard}"
        ContentTemplate="{DataTemplate pages:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
        Title="{DynamicResource Menu_Confirm}"
        ContentTemplate="{DataTemplate pages:ConfirmRoutePage}"
        Route="ConfirmRoutePage"
        IsVisible="False" />

    <ShellContent
    Title="{DynamicResource Menu_Settings}"
    ContentTemplate="{DataTemplate pages:PreferencesPage}"
    Route="PreferencesPage" />
</Shell>
