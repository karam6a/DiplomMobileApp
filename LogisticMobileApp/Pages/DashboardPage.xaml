<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:LogisticMobileApp.Helpers"
             x:Class="LogisticMobileApp.Pages.DashboardPage"
             Style="{StaticResource PageStyle}"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding [Dashboard_Title], Source={x:Static helpers:LocalizationResourceManager.Instance}}">

    <ContentPage.Resources>
        <toolkit:InvertedBoolConverter x:Key="InverseBooleanConverter" />
        <toolkit:IsStringNotNullOrEmptyConverter x:Key="StringIsNotEmptyConverter" />
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="logout_icon.png"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Заголовок -->
            <Label Text="{Binding [Dashboard_Title], Source={x:Static helpers:LocalizationResourceManager.Instance}}"
                   FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- КАРТОЧКА ВОДИТЕЛЯ — БЕЗОПАСНАЯ В RELEASE -->
            
            <Frame BackgroundColor="#1E1E2E" 
                   CornerRadius="16" 
                   Padding="20" 
                   HasShadow="True">

                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">

                    <Label Text="Водитель" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#AAAAAA" />

                    <Label Grid.Row="1" 
                           Text="{Binding DriverName}" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="White" />

                    <Label Grid.Row="1" 
                           Text="{Binding DriverPhone}" 
                           FontSize="16" 
                           TextColor="#BBBBBB" 
                           Margin="0,30,0,0" />

                    <!-- Статус водителя и номер машины -->
                    <Grid Grid.Row="2" ColumnDefinitions="Auto,*" Margin="0,0,0,0">
                        <Label Text="{Binding DriverStatus}"
                               TextColor="{Binding DriverStatusColor}"
                               FontSize="15"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />

                        <!-- Номерной знак справа -->
                        <Border Grid.Column="1"
                                Stroke="Transparent"
                                StrokeShape="RoundRectangle 4"
                                HorizontalOptions="End"
                                Margin="20,0,0,0"
                                Padding="0"
                                IsVisible="{Binding LicensePlate, Converter={StaticResource StringIsNotEmptyConverter}}">
                            <Grid WidthRequest="145" HeightRequest="30">
                                <Image Source="plate_template.png"
                                       Aspect="Fill" />
                                <Label Text="{Binding LicensePlate}"
                                       TextColor="Black"
                                       FontSize="25"
                                       FontFamily="Arial"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="20,-3,0,0">
                                <Label.Shadow>
                                    <Shadow Brush="Black"
                                            Offset="0,1"
                                            Radius="0"
                                            Opacity="0.6" />
                                </Label.Shadow>
                                </Label>
                            </Grid>
                        </Border>
                    </Grid>
                    

                    <!-- Индикатор загрузки — просто поверх всего -->
                    <ActivityIndicator Grid.RowSpan="3"
                                       IsRunning="{Binding IsLoading}"
                                       IsVisible="{Binding IsLoading}"
                                       Color="#512DA8"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" />

                    <!-- Ошибка — показываем только если не пустая строка -->
                    <Label Grid.RowSpan="3"
                           Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsVisible="{Binding ErrorMessageIsActive,Converter={StaticResource InverseBooleanConverter}}" />
                </Grid>
            </Frame>

            <!-- КАРТОЧКА МАРШРУТА — сразу под карточкой водителя -->
            <Frame BackgroundColor="#2A0F6D" 
                   CornerRadius="20" 
                   Padding="20" 
                   Margin="0,20,0,0"
                   HasShadow="True">

                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="16">

                    <!-- Заголовок -->
                    <Label Text="Активный маршрут" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="White" />

                    <!-- Название маршрута -->
                    <Label Grid.Row="1"
                           Text="{Binding Name}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="White" />

                    <!-- Расстояние + время -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="30">
                        <Frame BackgroundColor="#4D397E" CornerRadius="16" Padding="16">
                            <StackLayout>
                                <Label Text="Расстояние" FontSize="12" TextColor="#EEEEEE" />
                                <Label Text="{Binding Distance, StringFormat='{0} км'}"
                           FontSize="22" FontAttributes="Bold" TextColor="White" />
                            </StackLayout>
                        </Frame>

                        <Frame Grid.Column="1" BackgroundColor="#4D397E" CornerRadius="16" Padding="16">
                            <StackLayout>
                                <Label Text="Время в пути" FontSize="12" TextColor="#EEEEEE" />
                                <Label Text="{Binding Duration, StringFormat='{0} мин'}"
                           FontSize="22" FontAttributes="Bold" TextColor="White" />
                            </StackLayout>
                        </Frame>
                    </Grid>

                    <Grid Grid.Row="3" ColumnDefinitions="auto,*" ColumnSpacing="10">
                        <Button Grid.Column="0" Text="Показать маршрут" FontSize="15" BackgroundColor="#7B68EE" Clicked="OnShowRouteClicked"/>
                        <Button Grid.Column="1" Text="{Binding StartButtonText}" FontSize="15" BackgroundColor="#047A04" Clicked="OnStartRouteClicked"/>
                    </Grid>

                </Grid>
            </Frame>

            <!-- Кнопки -->
            <Button Text="Статистика" 
                    Clicked="OnStatisticsClicked" 
                    BackgroundColor="#333333" 
                    TextColor="White"
                    CornerRadius="12" />

            <Button Text="Выйти" 
                    Clicked="OnLogoutClicked" 
                    BackgroundColor="#D32F2F" 
                    TextColor="White"
                    CornerRadius="12" />

        </StackLayout>
    </ScrollView>
</ContentPage>