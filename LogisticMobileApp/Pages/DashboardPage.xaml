<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:LogisticMobileApp.Helpers"
             x:Class="LogisticMobileApp.Pages.DashboardPage"
             Style="{StaticResource PageStyle}"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding [Dashboard_Title], Source={x:Static helpers:LocalizationResourceManager.Instance}}">

    <ContentPage.Resources>
        <toolkit:InvertedBoolConverter x:Key="InverseBooleanConverter" />
        <toolkit:IsStringNotNullOrEmptyConverter x:Key="StringIsNotEmptyConverter" />
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="language_icon_dark.svg"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnLanguageButtonClicked" />
        <ToolbarItem IconImageSource="theme_icon_dark.svg"
                     Order="Primary"
                     Priority="1"
                     Clicked="OnThemeButtonClicked" />
        <ToolbarItem IconImageSource="logout_icon.png"
                     Order="Primary"
                     Priority="2"
                     Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <!-- ÐšÐÐ Ð¢ÐžÐ§ÐšÐ Ð’ÐžÐ”Ð˜Ð¢Ð•Ð›Ð¯ â€” Ð‘Ð•Ð—ÐžÐŸÐÐ¡ÐÐÐ¯ Ð’ RELEASE -->
            
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}" 
                   BorderColor="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                   CornerRadius="16" 
                   Padding="20" 
                   HasShadow="True">

                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">

                    <Label Text="{Binding [Driver_Label], Source={x:Static helpers:LocalizationResourceManager.Instance}}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light={StaticResource MutedTextLight}, Dark={StaticResource MutedTextDark}}" />

                    <Label Grid.Row="1" 
                           Text="{Binding DriverName}" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light={StaticResource TextLight}, Dark={StaticResource TextDark}}" />

                    <Label Grid.Row="1" 
                           Text="{Binding DriverPhone}" 
                           FontSize="16" 
                           TextColor="{AppThemeBinding Light={StaticResource MutedTextLight}, Dark={StaticResource MutedTextDark}}" 
                           Margin="0,30,0,0" />

                    <!-- Ð¡Ñ‚Ð°Ñ‚ÑƒÑ Ð²Ð¾Ð´Ð¸Ñ‚ÐµÐ»Ñ Ð¸ Ð½Ð¾Ð¼ÐµÑ€ Ð¼Ð°ÑˆÐ¸Ð½Ñ‹ -->
                    <Grid Grid.Row="2" ColumnDefinitions="Auto,*" Margin="0,0,0,0">
                        <Label Text="{Binding DriverStatus}"
                               TextColor="{Binding DriverStatusColor}"
                               FontSize="15"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />

                        <!-- ÐÐ¾Ð¼ÐµÑ€Ð½Ð¾Ð¹ Ð·Ð½Ð°Ðº ÑÐ¿Ñ€Ð°Ð²Ð° -->
                        <Border Grid.Column="1"
                                Stroke="Transparent"
                                StrokeShape="RoundRectangle 4"
                                HorizontalOptions="End"
                                Margin="20,0,0,0"
                                Padding="0"
                                IsVisible="{Binding LicensePlate, Converter={StaticResource StringIsNotEmptyConverter}}">
                            <Grid WidthRequest="145" HeightRequest="30">
                                <Image Source="plate_template.png"
                                       Aspect="Fill" />
                                <Label Text="{Binding LicensePlate}"
                                       TextColor="Black"
                                       FontSize="25"
                                       FontFamily="Arial"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="20,-3,0,0">
                                <Label.Shadow>
                                    <Shadow Brush="Black"
                                            Offset="0,1"
                                            Radius="0"
                                            Opacity="0.6" />
                                </Label.Shadow>
                                </Label>
                            </Grid>
                        </Border>
                    </Grid>
                    

                    <!-- Ð˜Ð½Ð´Ð¸ÐºÐ°Ñ‚Ð¾Ñ€ Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ¸ â€” Ð¿Ñ€Ð¾ÑÑ‚Ð¾ Ð¿Ð¾Ð²ÐµÑ€Ñ… Ð²ÑÐµÐ³Ð¾ -->
                    <ActivityIndicator Grid.RowSpan="3"
                                       IsRunning="{Binding IsLoading}"
                                       IsVisible="{Binding IsLoading}"
                                       Color="#512DA8"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" />

                    <!-- ÐžÑˆÐ¸Ð±ÐºÐ° â€” Ð¿Ð¾ÐºÐ°Ð·Ñ‹Ð²Ð°ÐµÐ¼ Ñ‚Ð¾Ð»ÑŒÐºÐ¾ ÐµÑÐ»Ð¸ Ð½Ðµ Ð¿ÑƒÑÑ‚Ð°Ñ ÑÑ‚Ñ€Ð¾ÐºÐ° -->
                    <Label Grid.RowSpan="3"
                           Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsVisible="{Binding ErrorMessageIsActive,Converter={StaticResource InverseBooleanConverter}}" />
                </Grid>
            </Frame>

            <!-- ÐšÐÐ Ð¢ÐžÐ§ÐšÐ ÐœÐÐ Ð¨Ð Ð£Ð¢Ð â€” ÑÑ€Ð°Ð·Ñƒ Ð¿Ð¾Ð´ ÐºÐ°Ñ€Ñ‚Ð¾Ñ‡ÐºÐ¾Ð¹ Ð²Ð¾Ð´Ð¸Ñ‚ÐµÐ»Ñ -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}" 
                   BorderColor="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                   CornerRadius="20" 
                   Padding="20" 
                   Margin="0,20,0,0"
                   HasShadow="True">

                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="16">

                    <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
                    <Label Text="{Binding [Active_Route_Label], Source={x:Static helpers:LocalizationResourceManager.Instance}}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light={StaticResource MutedTextLight}, Dark={StaticResource MutedTextDark}}" />

                    <!-- SKELETON LOADER - Ð¿Ð¾ÐºÐ°Ð·Ñ‹Ð²Ð°ÐµÑ‚ÑÑ Ð²Ð¾ Ð²Ñ€ÐµÐ¼Ñ Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ¸ -->
                    <VerticalStackLayout Grid.Row="1" Grid.RowSpan="3" 
                                         Spacing="16"
                                         IsVisible="{Binding IsRouteLoading}">
                        
                        <!-- Ð¡ÐºÐµÐ»ÐµÑ‚Ð¾Ð½ Ð½Ð°Ð·Ð²Ð°Ð½Ð¸Ñ Ð¼Ð°Ñ€ÑˆÑ€ÑƒÑ‚Ð° -->
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource SkeletonLight}, Dark={StaticResource SkeletonDark}}" 
                                HeightRequest="20" 
                                WidthRequest="150"
                                HorizontalOptions="Start"
                                StrokeShape="RoundRectangle 4"
                                StrokeThickness="0">
                            <Border.Behaviors>
                                <toolkit:AnimationBehavior>
                                    <toolkit:AnimationBehavior.AnimationType>
                                        <toolkit:FadeAnimation Opacity="0.5" Length="800" Easing="{x:Static Easing.SinInOut}" />
                                    </toolkit:AnimationBehavior.AnimationType>
                                </toolkit:AnimationBehavior>
                            </Border.Behaviors>
                        </Border>

                        <!-- Ð¡ÐºÐµÐ»ÐµÑ‚Ð¾Ð½ ÐºÐ°Ñ€Ñ‚Ð¾Ñ‡ÐµÐº Ñ€Ð°ÑÑÑ‚Ð¾ÑÐ½Ð¸Ñ Ð¸ Ð²Ñ€ÐµÐ¼ÐµÐ½Ð¸ -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="30">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource SkeletonLight}, Dark={StaticResource SkeletonDark}}" 
                                    HeightRequest="80" 
                                    StrokeShape="RoundRectangle 16"
                                    StrokeThickness="0">
                                <Border.Behaviors>
                                    <toolkit:AnimationBehavior>
                                        <toolkit:AnimationBehavior.AnimationType>
                                            <toolkit:FadeAnimation Opacity="0.5" Length="800" Easing="{x:Static Easing.SinInOut}" />
                                        </toolkit:AnimationBehavior.AnimationType>
                                    </toolkit:AnimationBehavior>
                                </Border.Behaviors>
                            </Border>
                            <Border Grid.Column="1" 
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SkeletonLight}, Dark={StaticResource SkeletonDark}}" 
                                    HeightRequest="80" 
                                    StrokeShape="RoundRectangle 16"
                                    StrokeThickness="0">
                                <Border.Behaviors>
                                    <toolkit:AnimationBehavior>
                                        <toolkit:AnimationBehavior.AnimationType>
                                            <toolkit:FadeAnimation Opacity="0.5" Length="800" Easing="{x:Static Easing.SinInOut}" />
                                        </toolkit:AnimationBehavior.AnimationType>
                                    </toolkit:AnimationBehavior>
                                </Border.Behaviors>
                            </Border>
                        </Grid>

                        <!-- Ð¡ÐºÐµÐ»ÐµÑ‚Ð¾Ð½ ÐºÐ½Ð¾Ð¿Ð¾Ðº -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource SkeletonLight}, Dark={StaticResource SkeletonDark}}" 
                                    HeightRequest="44" 
                                    WidthRequest="120"
                                    StrokeShape="RoundRectangle 8"
                                    StrokeThickness="0">
                                <Border.Behaviors>
                                    <toolkit:AnimationBehavior>
                                        <toolkit:AnimationBehavior.AnimationType>
                                            <toolkit:FadeAnimation Opacity="0.5" Length="800" Easing="{x:Static Easing.SinInOut}" />
                                        </toolkit:AnimationBehavior.AnimationType>
                                    </toolkit:AnimationBehavior>
                                </Border.Behaviors>
                            </Border>
                            <Border Grid.Column="1" 
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SkeletonLight}, Dark={StaticResource SkeletonDark}}" 
                                    HeightRequest="44" 
                                    StrokeShape="RoundRectangle 8"
                                    StrokeThickness="0">
                                <Border.Behaviors>
                                    <toolkit:AnimationBehavior>
                                        <toolkit:AnimationBehavior.AnimationType>
                                            <toolkit:FadeAnimation Opacity="0.5" Length="800" Easing="{x:Static Easing.SinInOut}" />
                                        </toolkit:AnimationBehavior.AnimationType>
                                    </toolkit:AnimationBehavior>
                                </Border.Behaviors>
                            </Border>
                        </Grid>

                        <!-- Ð˜Ð½Ð´Ð¸ÐºÐ°Ñ‚Ð¾Ñ€ Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ¸ Ð¿Ð¾ Ñ†ÐµÐ½Ñ‚Ñ€Ñƒ -->
                        <ActivityIndicator IsRunning="True"
                                           Color="#7B68EE"
                                           WidthRequest="40"
                                           HeightRequest="40"
                                           HorizontalOptions="Center"
                                           Margin="0,10,0,0" />
                    </VerticalStackLayout>

                    <!-- ÐÐ•Ð¢ ÐœÐÐ Ð¨Ð Ð£Ð¢Ð - Ð¿Ð¾ÐºÐ°Ð·Ñ‹Ð²Ð°ÐµÑ‚ÑÑ ÐºÐ¾Ð³Ð´Ð° Ð¼Ð°Ñ€ÑˆÑ€ÑƒÑ‚ Ð¾Ñ‚ÑÑƒÑ‚ÑÑ‚Ð²ÑƒÐµÑ‚ -->
                    <VerticalStackLayout Grid.Row="1" Grid.RowSpan="3"
                                         Spacing="16"
                                         IsVisible="{Binding HasNoRoute}"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Padding="20">
                        
                        <!-- Ð˜ÐºÐ¾Ð½ÐºÐ° -->
                        <Label Text="ðŸ“‹"
                               FontSize="48"
                               HorizontalOptions="Center" />
                        
                        <!-- Ð¡Ð¾Ð¾Ð±Ñ‰ÐµÐ½Ð¸Ðµ -->
                        <Label Text="{Binding [Dashboard_NoRouteMessage], Source={x:Static helpers:LocalizationResourceManager.Instance}}"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light={StaticResource MutedTextLight}, Dark={StaticResource MutedTextDark}}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap" />
                        
                    </VerticalStackLayout>

                    <!-- ÐšÐžÐÐ¢Ð•ÐÐ¢ - Ð¿Ð¾ÐºÐ°Ð·Ñ‹Ð²Ð°ÐµÑ‚ÑÑ Ð¿Ð¾ÑÐ»Ðµ Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ¸ -->
                    <!-- ÐÐ°Ð·Ð²Ð°Ð½Ð¸Ðµ Ð¼Ð°Ñ€ÑˆÑ€ÑƒÑ‚Ð° -->
                    <Label Grid.Row="1"
                           Text="{Binding Name}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextLight}, Dark={StaticResource TextDark}}"
                           IsVisible="{Binding IsRouteLoaded}" />

                    <!-- Ð Ð°ÑÑÑ‚Ð¾ÑÐ½Ð¸Ðµ + Ð²Ñ€ÐµÐ¼Ñ -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="30"
                          IsVisible="{Binding IsRouteLoaded}">
                        <Frame BackgroundColor="{AppThemeBinding Light={StaticResource PurpleAccent}, Dark={StaticResource PurpleAccentDark}}" CornerRadius="16" Padding="16">
                            <StackLayout>
                                <Label Text="{Binding [Distance_Label], Source={x:Static helpers:LocalizationResourceManager.Instance}}" FontSize="12" TextColor="#EEEEEE" />
                                <Label FontSize="22" 
                                       FontAttributes="Bold" 
                                       TextColor="White">
                                    <Label.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="Distance"/>
                                            <Binding Path="[KilometersLabel]"
                                                     Source="{x:Static helpers:LocalizationResourceManager.Instance}" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                            </StackLayout>
                        </Frame>

                        <Frame Grid.Column="1" BackgroundColor="{AppThemeBinding Light={StaticResource PurpleAccent}, Dark={StaticResource PurpleAccentDark}}" CornerRadius="16" Padding="16">
                            <StackLayout>
                                <Label Text="{Binding [TravelTimeLabel], Source={x:Static helpers:LocalizationResourceManager.Instance}}" FontSize="12" TextColor="#EEEEEE" />
                                <Label
                                    FontSize="22"
                                    FontAttributes="Bold"
                                    TextColor="White">
                                    <Label.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="Duration"/>
                                            <Binding Path="[MinutesLabel]"
                                                     Source="{x:Static helpers:LocalizationResourceManager.Instance}" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                                
                            </StackLayout>
                        </Frame>
                    </Grid>

                    <Grid Grid.Row="3" ColumnDefinitions="auto,*" ColumnSpacing="10"
                          IsVisible="{Binding IsRouteLoaded}">
                        <Button Grid.Column="0" Text="{Binding [ShowRouteLabel], Source={x:Static helpers:LocalizationResourceManager.Instance}}" FontSize="15" BackgroundColor="#7B68EE" Clicked="OnShowRouteClicked"/>
                        <Button x:Name="StartRouteButton" Grid.Column="1" 
                                Text="{Binding [StartButtonText], Source={x:Static helpers:LocalizationResourceManager.Instance}}" 
                                FontSize="15" 
                                BackgroundColor="#047A04" 
                                Clicked="OnStartRouteClicked">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding IsRouteStarted}" Value="True">
                                    <Setter Property="Text" Value="{Binding [ContinueButtonText], Source={x:Static helpers:LocalizationResourceManager.Instance}}" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>

                </Grid>
            </Frame>

            <!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸ -->

            <Button Text="{Binding [ExitButton], Source={x:Static helpers:LocalizationResourceManager.Instance}}" 
                    Clicked="OnLogoutClicked" 
                    BackgroundColor="#D32F2F" 
                    TextColor="White"
                    CornerRadius="12" />
            

        </StackLayout>
    </ScrollView>
</ContentPage>