<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:LogisticMobileApp.Helpers"
             x:Class="LogisticMobileApp.Pages.DashboardPage"
             Style="{StaticResource PageStyle}"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding [Dashboard_Title], Source={x:Static helpers:LocalizationResourceManager.Instance}}">

    <ContentPage.Resources>
        <toolkit:InvertedBoolConverter x:Key="InverseBooleanConverter" />
        <toolkit:IsStringNotNullOrEmptyConverter x:Key="StringIsNotEmptyConverter" />
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="logout_icon.png"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Заголовок -->
            <Label Text="{Binding [Dashboard_Title], Source={x:Static helpers:LocalizationResourceManager.Instance}}"
                   FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- КАРТОЧКА ВОДИТЕЛЯ — БЕЗОПАСНАЯ В RELEASE -->
            <Frame BackgroundColor="#1E1E2E" 
                   CornerRadius="16" 
                   Padding="20" 
                   HasShadow="True">

                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">

                    <Label Text="Водитель" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#AAAAAA" />

                    <Label Grid.Row="1" 
                           Text="{Binding DriverName}" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="White" />

                    <Label Grid.Row="1" 
                           Text="{Binding DriverPhone}" 
                           FontSize="16" 
                           TextColor="#BBBBBB" 
                           Margin="0,30,0,0" />

                    <!-- Статус водителя и номер машины -->
                    <Grid Grid.Row="2" ColumnDefinitions="Auto,*" Margin="0,0,0,0">
                        <Label Text="{Binding DriverStatus}"
                               TextColor="{Binding DriverStatusColor}"
                               FontSize="15"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />

                        <!-- Номерной знак справа -->
                        <Border Grid.Column="1"
                                Stroke="Transparent"
                                StrokeShape="RoundRectangle 4"
                                HorizontalOptions="End"
                                Margin="20,0,0,0"
                                Padding="0"
                                IsVisible="{Binding LicensePlate, Converter={StaticResource StringIsNotEmptyConverter}}">
                            <Grid WidthRequest="150" HeightRequest="35">
                                <Image Source="plate_template.png"
                                       Aspect="Fill" />
                                <Label Text="{Binding LicensePlate}"
                                       TextColor="Black"
                                       FontSize="25"
                                       FontAttributes="Bold"
                                       FontFamily="Arial"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="15,0,0,0" />
                            </Grid>
                        </Border>
                    </Grid>
                    

                    <!-- Индикатор загрузки — просто поверх всего -->
                    <ActivityIndicator Grid.RowSpan="3"
                                       IsRunning="{Binding IsLoading}"
                                       IsVisible="{Binding IsLoading}"
                                       Color="#512DA8"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" />

                    <!-- Ошибка — показываем только если не пустая строка -->
                    <Label Grid.RowSpan="3"
                           Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsVisible="{Binding ErrorMessageIsActive,Converter={StaticResource InverseBooleanConverter}}" />
                </Grid>
            </Frame>

            <!-- Кнопки -->
            <Button Text="Маршруты"
                    Clicked="OnRouteClicked"
                    BackgroundColor="#512DA8"
                    TextColor="White"
                    CornerRadius="12" />

            <Button Text="Статистика" 
                    Clicked="OnStatisticsClicked" 
                    BackgroundColor="#333333" 
                    TextColor="White"
                    CornerRadius="12" />

            <Button Text="Выйти" 
                    Clicked="OnLogoutClicked" 
                    BackgroundColor="#D32F2F" 
                    TextColor="White"
                    CornerRadius="12" />

        </StackLayout>
    </ScrollView>
</ContentPage>