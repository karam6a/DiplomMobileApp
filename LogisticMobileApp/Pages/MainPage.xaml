<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticMobileApp.Pages.MainPage"
             xmlns:helpers="clr-namespace:LogisticMobileApp.Helpers"
             BackgroundColor="#0F0F1A">

    <Grid VerticalOptions="CenterAndExpand"
          HorizontalOptions="CenterAndExpand">

        <!-- Определяем две строки -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Кубик — в первой строке -->
        <GraphicsView x:Name="CubeGraphicsView"
                      HeightRequest="120"
                      WidthRequest="120"
                      Grid.Row="0" />

        <!-- Текст — во второй строке, под кубиком -->
        <Label Text="{Binding [Login_Checking], Source={x:Static helpers:LocalizationResourceManager.Instance}}"
               TextColor="#AAAAAA"
               FontSize="17"
               FontAttributes="Italic"
               HorizontalTextAlignment="Center"
               Margin="0,40,0,0"
               Grid.Row="1" />
    </Grid>
</ContentPage>