<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:LogisticMobileApp.Helpers"
             x:Class="LogisticMobileApp.Pages.RegisterPage"
             Shell.NavBarIsVisible="False"
             Style="{StaticResource PageStyle}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">

            <Label x:Name="RegisterTitle"
                   Text="{Binding [Register_Title], Source={x:Static helpers:LocalizationResourceManager.Instance}}"
                   FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Entry x:Name="CodeEntry"
                       Grid.Column="0"
                       Text="{Binding Code, Mode=TwoWay}"
                       Placeholder="{Binding [CodePlaceholder], Source={x:Static helpers:LocalizationResourceManager.Instance}}"/>

                <Button x:Name="ScannerButton"
                        Grid.Column="1"
                        WidthRequest="40"
                        HeightRequest="40"
                        BackgroundColor="Transparent"
                        Command="{Binding OpenScannerCommand}"
                        ImageSource="{AppThemeBinding Light=camera_light.svg, Dark=camera.svg}" />
            </Grid>

            <Button x:Name="RegisterButton"
                    Text="{Binding [Register_Button], Source={x:Static helpers:LocalizationResourceManager.Instance}}"
                    Command="{Binding RegisterCommand}" />

            <Label x:Name="GoToLoginLink"
                   Text="{Binding [GoToLoginLink], Source={x:Static helpers:LocalizationResourceManager.Instance}}"
                   Style="{StaticResource LinkLabelStyle}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToLoginCommand}" />
                </Label.GestureRecognizers>
            </Label>

        </StackLayout>
    </ScrollView>
</ContentPage>
